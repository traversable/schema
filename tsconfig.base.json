{
  "compilerOptions": {
    "incremental": true,
    "composite": true,
    "target": "ES2022",
    "lib": ["ES2022", "DOM", "DOM.Iterable"],
    "moduleDetection": "force",
    "baseUrl": ".",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "resolveJsonModule": true,
    "types": [],
    "allowJs": false,
    "checkJs": false,
    "strict": true,
    "strictNullChecks": true,
    "exactOptionalPropertyTypes": false,
    "noFallthroughCasesInSwitch": true,
    "noImplicitAny": true,
    "declaration": true,
    "declarationMap": true,
    "noEmitOnError": false,
    "removeComments": false,
    "sourceMap": true,
    "esModuleInterop": false,
    "forceConsistentCasingInFileNames": true,
    "isolatedModules": true,
    "noErrorTruncation": true,
    "skipLibCheck": true,
    "paths": {
      "@traversable/derive-codec": ["packages/derive-codec/src/index.js"],
      "@traversable/derive-codec/*": ["packages/derive-codec/src/*.js"],
      "@traversable/derive-equals": ["packages/derive-equals/src/index.js"],
      "@traversable/derive-equals/*": ["packages/derive-equals/src/*.js"],
      "@traversable/derive-validators": [
        "packages/derive-validators/src/index.js"
      ],
      "@traversable/derive-validators/*": [
        "packages/derive-validators/src/*.js"
      ],
      "@traversable/json": ["packages/json/src/index.js"],
      "@traversable/json/*": ["packages/json/src/*.js"],
      "@traversable/registry": ["packages/registry/src/index.js"],
      "@traversable/registry/*": ["packages/registry/src/*.js"],
      "@traversable/schema": ["packages/schema/src/index.js"],
      "@traversable/schema-compiler": ["packages/schema-compiler/src/index.js"],
      "@traversable/schema-compiler/*": ["packages/schema-compiler/*.js"],
      "@traversable/schema-errors": ["packages/schema-errors/src/index.js"],
      "@traversable/schema-errors/*": ["packages/schema-errors/*.js"],
      "@traversable/schema-seed": ["packages/schema-seed/src/index.js"],
      "@traversable/schema-seed/*": ["packages/schema-seed/src/*.js"],
      "@traversable/schema-to-json-schema": [
        "packages/schema-to-json-schema/src/index.js"
      ],
      "@traversable/schema-to-json-schema/*": [
        "packages/schema-to-json-schema/src/*.js"
      ],
      "@traversable/schema-to-string": [
        "packages/schema-to-string/src/index.js"
      ],
      "@traversable/schema-to-string/*": ["packages/schema-to-string/src/*.js"],
      "@traversable/schema-valibot-adapter": [
        "packages/schema-valibot-adapter/src/index.js"
      ],
      "@traversable/schema-valibot-adapter/*": [
        "packages/schema-valibot-adapter/src/*.js"
      ],
      "@traversable/schema-zod-adapter": [
        "packages/schema-zod-adapter/src/index.js"
      ],
      "@traversable/schema-zod-adapter/*": ["packages/schema-zod-adapter/*.js"],
      "@traversable/schema/*": ["packages/schema/src/*.js"]
    }
  }
}
