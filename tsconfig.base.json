{
  "compilerOptions": {
    "incremental": true,
    "composite": true,
    "target": "ES2022",
    "lib": ["ES2022", "DOM", "DOM.Iterable"],
    "moduleDetection": "force",
    "baseUrl": ".",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "resolveJsonModule": true,
    "types": [],
    "allowJs": false,
    "checkJs": false,
    "strict": true,
    "strictNullChecks": true,
    "exactOptionalPropertyTypes": false,
    "noFallthroughCasesInSwitch": true,
    "noImplicitAny": true,
    "declaration": true,
    "declarationMap": true,
    "noEmitOnError": false,
    "removeComments": false,
    "sourceMap": true,
    "esModuleInterop": false,
    "forceConsistentCasingInFileNames": true,
    "isolatedModules": true,
    "noErrorTruncation": true,
    "skipLibCheck": true,
    "paths": {
      "@traversable/json": ["packages/json/src/index.js"],
      "@traversable/json/*": ["packages/json/*.js"],
      "@traversable/registry": ["packages/registry/src/index.js"],
      "@traversable/registry/*": ["packages/registry/*.js"],
      "@traversable/schema": ["packages/schema/src/index.js"],
      "@traversable/schema-core": ["packages/schema-core/src/index.js"],
      "@traversable/schema-core/*": ["packages/schema-core/*.js"],
      "@traversable/schema-zod-adapter": [
        "packages/schema-zod-adapter/src/index.js"
      ],
      "@traversable/schema-zod-adapter/*": ["packages/schema-zod-adapter/*.js"],
      "@traversable/schema/*": ["packages/schema/*.js"]
    }
  }
}
